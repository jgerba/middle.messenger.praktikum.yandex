
  <label class='label label--hidden {{#if upload}}upload-label{{/if}}' for='{{name}}-id'>{{text}}</label>

  <input class='input {{#if centeredInput}}centered-input{{/if}}' id='{{name}}-id' type='{{#if type}}{{type}}{{else}}text{{/if}}'
    name='{{name}}' placeholder='{{text}}' value='{{value}}'/>

  {{#if upload}}
    <input class='input upload-input' id='{{name}}-id' type='file'
      name='{{name}}' placeholder='{{text}}' accept='.jpeg, .jpg, .png, .gif, .webp'/>
  {{/if}}

  <p class='error hidden'></p>
