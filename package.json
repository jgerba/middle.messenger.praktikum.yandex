{
  "name": "middle.messanger.praktikum.yandex",
  "private": true,
  "version": "0.4.0",
  "engines": {
    "node": "21.2.0"
  },
  "type": "module",
  "scripts": {
    "dev": "tsc && vite --force",
    "build": "tsc && vite build",
    "start": "tsc && vite build && node server.js",
    "lint-staged": "lint-staged",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint \"**/*.(scss|css)\" --fix",
    "test": "mocha",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:js"
    ],
    "*.{scss,css}": [
      "npm run lint:css"
    ]
  },
  "devDependencies": {
    "@types/chai": "4.3.14",
    "@types/mocha": "10.0.6",
    "@types/sinon": "17.0.3",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "chai": "5.1.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.1",
    "husky": "9.0.11",
    "jsdom": "24.0.0",
    "lint-staged": "15.2.2",
    "mocha": "10.3.0",
    "sass": "1.72.0",
    "sinon": "17.0.1",
    "stylelint": "16.2.1",
    "stylelint-config-standard-scss": "13.0.0",
    "stylelint-scss": "6.2.1",
    "ts-node": "10.9.2",
    "typescript": "5.4.3",
    "vite": "5.2.4",
    "vite-plugin-handlebars": "2.0.0"
  },
  "dependencies": {
    "express": "4.19.2",
    "handlebars": "4.7.8",
    "uuid": "9.0.1"
  }
}
